@model IEnumerable<Hozio.Models.contact1>

@{
    ViewBag.Title = "Contacts Admin";
}

<h2>Contacts Admin</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("index", "contact1"))
{
    <p>
        Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search">
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.sortName })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fullPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneGatekeeper)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.website)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fullAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phoneNote)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fullPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneGatekeeper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                <a href="@item.website">@Html.DisplayFor(modelItem => item.website)</a>
            </td>
            <td>
                <a href="@item.addressURL">@Html.DisplayFor(modelItem => item.fullAddress)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.phoneNote)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.contact1ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.contact1ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.contact1ID })
            </td>
        </tr>
    }

</table>
